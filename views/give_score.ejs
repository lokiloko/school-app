<% include partials/header.ejs %>
  <br />
  <div class="rows">
    <div class="col s12 center">
      <div class="card-panel teal lighten-2">
        <a href="/subjects/<%= subjectRows.id %>/enrolledstudents" class="btn-floating btn-large waves-effect waves-light red left"><i class="material-icons left">backspace</i></a>
        <%= pageTitle %>
      </div>
    </div>
  </div>
  <br>
  <form action="/subjects/<%= id %>/givescore" method="post">
    <div class="input-field">
      <input type="text" name="student" value="<%= studentRows.fullname() %>" disabled>
      <label for="student">Student Name</label>
    </div>
    <div class="input-field">
      <input type="text" name="subject" value="<%= subjectRows.subject_name %>" disabled>
      <label for="subject">Subject Name</label>
    </div>
    <input type="hidden" name="SubjectId" value="<%= subjectRows.id %>">
    <div class="input-field">
      <input type="number" name="score">
      <label for="score">Score</label>
    </div>
    <br />
    <input type="submit" value="SUBMIT" class="waves-effect waves-light btn">
  </form>
  <% include partials/footer.ejs %>
