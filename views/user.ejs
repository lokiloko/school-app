<% include partials/header.ejs %>
  <h2><%= message %></h2>
  <br />
  <div class="rows">
    <div class="col s12 center">
      <div class="card-panel teal lighten-2">
        <a href="/" class="btn-floating btn-large waves-effect waves-light red left"><i class="material-icons left">backspace</i></a>
        <%= pageTitle %>
      </div>
    </div>
  </div>
  <br>
  <div class="rows">
    <table id="example" class="table responsive centered highlight bordered striped light-green" border="5">
      <thead>
        <tr>
          <td>No</td>
          <td>ID</td>
          <td>Username</td>
          <td>Password</td>
          <td>Salt</td>
          <td></td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody>
        <%
        for(var i = 0;i<dataRows.length;i++) {
          %>
          <tr>
            <td>
              <%= i+1 %>
            </td>
            <td>
              <%= dataRows[i].id %>
            </td>
            <td>
              <%= dataRows[i].username %>
            </td>
            <td>
              <%= dataRows[i].password %>
            </td>
            <td>
              <%= dataRows[i].salt %>
            </td>
            <td><a href="/users/edit/<%= dataRows[i].id %>" class="waves-effect waves-light btn light-blue">Edit</a></td>
            <td><a onclick="return confirm('Are you sure?')" href="/users/delete/<%= dataRows[i].id %>" class="waves-effect waves-light btn red">Delete</a></td>
          </tr>
          <%
        }
      %>
      </tbody>
    </table>
    <br />
    <a href="/users/add" class="waves-effect waves-light btn">Add new User<i class="material-icons left">add</i></a>
  </div>
  <% include partials/footer.ejs %>
